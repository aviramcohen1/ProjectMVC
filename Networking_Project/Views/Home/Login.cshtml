@model Networking_Project.Models.UsersTbl

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
               
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        <a href="@Url.Action("Register","Home")" class="btn btn-warning"> Don't have an account yet? Create now!</a>
                        <a href="@Url.Action("Index","Guest")" class="btn btn-warning"> Do you want try guest stauts? Try now!</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


